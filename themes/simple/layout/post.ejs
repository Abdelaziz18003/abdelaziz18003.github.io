<div class="post">
  <h1><%= page.title %></h1>

  <!-- author info -->
  <div class="row items-center">
    <div class="avatar small">
      <img src="/img/favicon.jpg" alt="avatar">
    </div>
    <div class="ml-md">
      <div><a href="<%- config.url %>">Abdelaziz Mokhnache</a></div>
      <div><%- date(page.date, config.date_format) %></div>
    </div>
  </div>

  <!-- article content -->
  <article><%- page.content %></article>
  
  <!-- facebook comment box -->
  <% if (theme.facebook_comments_enabled) { %>
    <div
      class="fb-comments"
      data-href="<%- url %>"
      data-numposts="5"
      data-width="100%"
    >
    </div>
  <% } %>
</div>