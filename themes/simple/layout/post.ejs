<div class="post">
  <h1><%= page.title %></h1>

  <!-- article info -->
  <div class="row items-center">
    <small>Published <%- date(page.date, config.date_format) %></small>
    <small class="ml-lg"><%- readingTime(page.content) %></small>
  </div>

  <!-- article content -->
  <article><%- page.content %></article>
  
  <!-- facebook comment box -->
  <% if (theme.facebook_comments_enabled) { %>
    <div
      class="fb-comments"
      data-href="<%- url %>"
      data-numposts="5"
      data-width="100%"
    >
    </div>
  <% } %>
</div>